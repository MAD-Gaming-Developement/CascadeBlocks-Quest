<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/inscas"
        tools:context=".Instructions">

    <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="11dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/scrollableTextView"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CascadeBlocks Quest is a Tetris-inspired game that challenges players with falling blocks.
The objective is to strategically rotate and place the descending blocks to create solid horizontal lines. Completed lines disappear, earning
points and making room for more blocks. The game intensifies as the speed of falling blocks increases over time, testing the player's reflexes and
decision-making skills. Enjoy the immersive experience of CascadeBlocks Quest as you aim for your high scores and strive to overcome the increasing difficulty
levels. Wether you're a casual player or a Tetris enthusiast, the game promises engaging gameplay and a visually appealing interface for an entertaining gaming experience."
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:padding="34dp"/>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
